<div class="container-fluid">
  <div class="row">
    <div class="col-12 px-0">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="/images/carousel-images/pic2.jpeg" alt="{{__ "pages.about_me.carousel_alt_1"}}">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/carousel-images/pic3.jpeg" alt="{{__ "pages.about_me.carousel_alt_2"}}">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/carousel-images/pic1.jpeg" alt="{{__ "pages.about_me.carousel_alt_3"}}">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="block-about" id="block-about">
        <div class="jumbotron">
          <div class="row">
            <div class="col-12 col-lg-6 text-justify">
              <div class="block-about-title text-center">
                <h1 class="h3">{{__ "pages.about_me.about_block"}}</h1>
              </div>
              <div class="d-block d-lg-none text-center my-4">
                <img class="img-fluid" src="/images/photo-of-sveta.jpg" alt="{{__ "pages.about_me.about_block_photo_alt"}}">
              </div>
              {{{__ "pages.about_me.description"}}}
              <hr class="my-4">
              <div class="blockquote-footer">
                {{__ "pages.about_me.footer_text"}}
                <cite title="Source Title">
                  {{__ "pages.about_me.footer_name"}}
                </cite>
              </div>
            </div>
            <div class="col-12 col-lg-6 text-center d-none d-lg-block my-4 pt-4">
              <img class="img-fluid" src="/images/photo-of-sveta.jpg" alt="{{__ "pages.about_me.about_block_photo_alt"}}">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="block-title display-4 my-5">
        {{__ "pages.about_me.services"}}
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-sm-6 col-lg-3 services block-services-portrait">
      <span>{{__ "pages.about_me.services_portrait"}}</span>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 services block-services-landscape">
      <span>{{__ "pages.about_me.services_landscape"}}</span>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 services block-services-product">
      <span>{{__ "pages.about_me.services_product"}}</span>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 services block-services-event">
      <span>{{__ "pages.about_me.services_event"}}</span>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 services block-services-wedding">
      <span>{{__ "pages.about_me.services_wedding"}}</span>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 services block-services-lifestyle">
      <span>{{__ "pages.about_me.services_lifestyle"}}</span>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 services block-services-fashion">
      <span>{{__ "pages.about_me.services_fashion"}}</span>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 services block-services-editing">
      <span>{{__ "pages.about_me.services_editing"}}</span>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="block-title display-4 my-5">
        {{__ "pages.about_me.testimonials"}}
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="jumbotron mt-0">
        <div class="row">
          <div class="col-12">
            <p class="testimonials-title">
              {{__ "pages.about_me.testimonials_1_title"}}
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-lg-6 img-block-testimonials">
            <img class="img-fluid my-3" src="/images/photos/testimonials/maryna.jpg" alt="{{__ "pages.about_me.testimonials_1_photo_alt"}}">
          </div>
          <div class="col-12 col-lg-6 text-justify">
            {{{__ "pages.about_me.testimonials_1_description"}}}
            <p>
              {{__ "pages.about_me.testimonials_1_footer"}}
            </p>
            <hr>
            <div class="blockquote-footer">
              {{__ "pages.about_me.testimonials_1_footer_city"}}
              <cite title="Source Title">
                {{__ "pages.about_me.testimonials_1_footer_name"}}
              </cite>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
